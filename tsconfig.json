{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"esModuleInterop": true,
		"noEmit": true,
		"baseUrl": ".",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"paths": {
			"$lib/*": ["./src/lib/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
